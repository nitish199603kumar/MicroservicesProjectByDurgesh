  datasource:
    url: jdbc:postgresql://localhost:5432/microservices_hotel_db
    username: postgres
    password: root
    driver-class-name: org.postgresql.Driver
    
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true  
    database-platform: org.hibernate.dialect.PostgreSQLDialect